var answer = $('.answer[data-answer-id="<%= @answer.id %>"]');

<% if @answer.errors.present? %>
  $('.alert').html('<%= j flash.now[:alert] %>');
  $('.notice').empty();
  
  answer.find('.edit_answer-errors').html('<%= j render "shared/errors", object: @answer %>');
<% else %>
  $('.alert').empty();
  $('.notice').html('<%= j flash.now[:notice] %>');
  answer.find('.edit_answer-errors').empty();

  answer.find('p').text('<%= @answer.body %>');
  answer.find('form').remove();
<% end %>

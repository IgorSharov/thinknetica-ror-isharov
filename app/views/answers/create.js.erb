<% if @answer.errors.present? %>
  $(".alert").html("<%= j flash.now[:alert] %>");
  $(".notice").empty();
  $('.new-answer-errors').html('<%= j render "shared/errors", object: @answer %>');
<% else %>
  $(".alert").empty();
  $('.new-answer-errors').empty();
  $(".notice").html("<%= j flash.now[:notice] %>");

  $('.answers').append('<%= j render @answer %>');
  $('#new_answer>#answer_body').val('');
<% end %>

<% if @question.errors.present? %>
  $(".alert").html("<%= j flash.now[:alert] %>");
  $(".notice").empty();

  $('.edit_question-errors').html("<%= j render 'shared/errors', object: @question %>");
<% else %>
  $(".alert").empty();
  $(".notice").html("<%= j flash.now[:notice] %>");

  $('.question-actions-bar').show()
  $('.edit_question').hide()

  $('.question>h1').html('<%= @question.title %>')
  $('.question>p').html('<%= @question.body %>')
<% end %>
